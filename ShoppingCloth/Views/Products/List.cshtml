@using ShoppingCloth.ViewModel
@model ProductsListViewModel
@{
    ViewData["Title"] = "List";
}

<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width"/>
        <title>List</title>
    </head>
    <body>
        <h1>Вся одежда</h1>
        <h3>@Model.currCategory</h3>
    @{
       
        foreach(var product in Model.AllProducts)
        {
            <div class="col-lg-4">
            <img class="img-thumbnail" src="@product.Image" alt="@product.Name"/>
            <h2>Название: @product.Name</h2>
            <p>Цены: @product.Price.ToString("c")</p>
            <p><a class="btn btn-warning" href="#">Подробнее</a></p>
            
            </div>
            
        }
     }
    </body>
</html>

